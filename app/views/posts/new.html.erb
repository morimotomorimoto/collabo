<div id="top">
	<h3>新規投稿</h3>
</div>

<div id="box">
	<!-- form_for部分 -->
	<%= form_for(@post) do |f| %>

	    <h4>タイトル</h4>
	    <%= f.text_field :title %>

	    <h4>本文</h4>
	    <%= f.text_area :body %>

	    <h4>天気</h4>
	    <%= f.text_field :weather %>

	    <h4>画像</h4>
		<%= f.attachment_field :image %>

	    <h4><%= f.submit '投稿' %></h4>

	    <span><%=link_to "投稿一覧", "/posts/index" %></span>

	<% end %>
</div>